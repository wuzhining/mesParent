<!DOCTYPE html>
<html>
  
  <head> 
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" /> 
	<#include "../common-header.html"/>
  </head>

   <script type="text/html" id="billTypeFixtureDictTpl">
	{{#  if(d.billTypeFixture){}}
		{{ d.billTypeFixture.dictName 
 	}}
	{{# } }}
   </script>

   <script type="text/html" id="billStatusFixtureDictTpl">
	{{#  if(d.billStatusFixture){}}
		{{ d.billStatusFixture.dictName 
 	}}
	{{# } }}
   </script>
   
    <!--单据编码-->
   <script type="text/html" id="billFixtureTpl">
	{{#  if(d.billFixture){}}
		{{ d.billFixture.billCode
 	}}
	{{# } }}
   </script> 
     <!--操作人-->
   <script type="text/html" id="createUserIdTpl">
	{{#  if(d.caretUserPassport){}}
		{{ d.caretUserPassport.realName 
 	}}
	{{# } }}
   </script> 

  <body style='width:100%;height:100%'>
    <div class="x-nav">
      <span class="layui-breadcrumb"> 
        <a href="">历史追溯</a> <a><cite>工具单据状态历史</cite></a>
      </span>
       <!--
       <a class="layui-btn layui-btn-small" style="line-height:1.6em;margin-top:3px;float:right" href="javascript:location.replace(location.href);" title="刷新">
       <i class="layui-icon" style="line-height:30px">ဂ</i></a>
       -->
    </div>
    <div class="x-body">
      <div class="layui-row">
        <form class="layui-form layui-col-md12 x-so">
        <input type="text" name="billCodeLike"  placeholder="请输入单据编码" autocomplete="off" class="layui-input">
        <select name="billTypeDictId"  lay-search>    
            <option value="">请选择工具单据类型</option> 
            <#if billTypeFixtureList??>
             <#list billTypeFixtureList as item>
		       <option value="${item.id?c}" >${item.dictName}</option>
		    </#list>
		    </#if> 
        </select>  
        <select name="auditStatusDictId"  lay-search>    
            <option value="">请选择工具单据状态</option> 
            <#if billStatusFixtureList??>
             <#list billStatusFixtureList as item>
		       <option value="${item.id?c}" >${item.dictName}</option>
		    </#list>
		    </#if> 
        </select> 
          <button type="reset" class="layui-btn layui-btn-sm  " id="reset" style="background-color: #009688;color:#FFFFFF">重置</button>
          <button class="layui-btn layui-btn-sm"  lay-submit lay-filter="search"><i class="layui-icon">&#xe615;</i></button>
        </form>
      </div>

       <div class="layui-col-md12" id='topTab'>
  	 			<div class="layui-row grid-demo">
            		<div class="layui-col-md12" style="text-align: center;">
        					<table class="layui-hide" id="listTable" lay-filter="tablefilter"></table>
        			</div>
        		</div>
        </div>

    </div>


<script type="text/javascript">
layui.config({
    base: '/static/plugins/layui/base/',
    v: new Date().getTime()
}).use([ 'form','table','laydate','layuiconfig','layuiformajax','layuitable'], function(){
	var form = layui.form, 
	$ = layui.jquery, table = layui.table,  laydate = layui.laydate,
	layer = layui.layer,  layuitable = layui.layuitable,layuiconfig = layui.layuiconfig;
	var layuiformajax = layui.layuiformajax;
	var curTable = layuitable.render({
    	elem: '#listTable'
    	,id:'listTable'
    	,url:'/history/historyBillFixtureStatus/list/json'
    	,cols: [[
    	     {field:'id',  title: 'ID',align:'center'}
     	    ,{field:'billFixtureId',  title: '工具单据编码', align:'center',templet:'#billFixtureTpl'}
    	    ,{field:'billTypeFixtureDictId',  title: '工具单据类型',align:'center',templet:'#billTypeFixtureDictTpl'}
    	    ,{field:'billStatusFixtureDictId',  title: '工具单据状态',align:'center',templet:'#billStatusFixtureDictTpl'}
     	    ,{field:'billCode',  title: '单据编码', align:'center'}
    	    ,{field:'remark',  title: '备注',align:'center'}
    	    ,{field:'createTime',  title: '创建时间', align:'center'}
    	    ,{field:'createUserId',  title: '操作人', align:'center',templet:'#createUserIdTpl'}
    	]],
        done: function () {
            $(".layui-table-box").find("[data-field='id']").css("display","none");   
         }
  	});	
	form.on('submit(search)', function (data) {
		layuitable.reload(data.field);
        return false;
  	});

   	//重置
	$('#reset').on('click',function(e){
   		$("input").val("");
   		$("select").val("");
   	})
});	
</script>
 
  </body>

</html>