<script type="text/javascript">
	var returnData = [];
	layui.config({
	    base: '/static/plugins/layui/base/',
	    v: new Date().getTime()
	}).use(['form','table','layuiconfig','layuiformajax','layuitable'], function(){
		var form = layui.form, 
		$ = layui.jquery,  table = layui.table,layuitable = layui.layuitable
		layer = layui.layer,layuitable = layui.layuitable,layuiconfig = layui.layuiconfig;
		var layuiformajax = layui.layuiformajax;
		var url = $(window.parent.document).find("iframe").attr("src");
	    var arr = url.split('?');
	    var arrs = arr[1].split('&&')
	    //console.log(arrs);
	    var result=url.indexOf("?");
	    if(result>0){
	    	var productionlineId = arrs[0].split('=')[1];
	    	var workshopId = arrs[1].split('=')[1];
	    	console.log(productionlineId);
	    	console.log(workshopId);
	    	$("#ids").val(productionlineId);
	    	$("#idss").val(workshopId);
	    }
		var curTable = layuitable.render({
	    	elem: '#shelf_result'
	    	,id:'shelf_result'
	    	,url:'/struct/structProdlineEquipFixture/list/json?productionlineId=' + productionlineId
	    	,height:640
	   		,cols: [[
			    	 {field:'id',  title: 'ID',align:'center', width: 220}
	   	    	    ,{field:'fixtureCode',  title: '工具编码',align:'center', width: 220,templet:'#fixtureCode'}
	   	    	 	,{field:'fixtureLabel',  title: '工具标签',align:'center', width: 200,templet:'#fixtureLabel'}
	   	    	 	,{field:'fixtureSpecsCode',  title: '工具品种规格编码',align:'center', width: 200,templet:'#fixtureSpecsCode'}
	   	    	 	,{field:'fixtureSpecsName',  title: '工具品种规格名称',align:'center', width: 200,templet:'#fixtureSpecsName'}
	   	    	 	,{field:'classesId',  title: '工具分类',align:'center', width: 200,templet:'#fixtureClasses'}
	   	    	 	,{field:'fixtureStatusDictId',  title: '工具状态',align:'center', width: 200,templet:'#fixtureStatus'}
	   	    	 	,{field:'', width:'20%', title: '操作', align:'center', toolbar: '#barDemo', fixed: 'right'}
	     	    	]],done:function(){
	     	    		// 隐藏列
	     	    		$(".layui-table-box").find("[data-field='id']").css("display","none"); 
	     	    	}
	  	});
		
		form.on('submit(search)', function (data) {
			curTable.reload(data.field);
	        return false;
	  	});
		
		table.on('tool(shelf_result)', function(obj) {
			var data = obj.data;
			if (obj.event === 'del') {
		          //监听提交
	       	  var url = '/struct/structProdlineEquipFixture/del?id='+ data.id;
	       	  layuiformajax.postJson(url, '', function (result) {
	       		  layer.msg('删除成功!', {icon: 1, time: 1000},function () {
	     	                // 获得frame索引
	     	                var index = parent.layer.getFrameIndex(window.name);
	     				  	location.reload(); 
	     	                layer.close(index);
	     	            });
	     		  });
		
			}
		});
	});

</script>

</html>