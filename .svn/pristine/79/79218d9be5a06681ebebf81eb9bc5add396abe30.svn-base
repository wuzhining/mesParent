<!DOCTYPE html>
<html>
  
  <head> 
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" /> 
	<#include "../common-header.html"/>
  </head>

  
  <body>

    <div class="x-body">
      <div class="layui-row">
        <form class="layui-form layui-col-md12 x-so">
          <input type="hidden"  id="ids" />
          <input type="hidden"  id="id"  name="id" value="<#if entity??&&entity.id??>${entity.id?c}<#else></#if>" />
          <select name="functionId">
          	 <option value="">请选择功能</option>
          	     <#if adminFunctionList1??>
          	       <#list adminFunctionList1 as item>
		            	<option value="${item.id?c}" >${item.functionName}</option>
		         	</#list>
		         </#if> 
          </select>
          <button class="layui-btn"  lay-submit lay-filter="search"><i class="layui-icon">&#xe615;</i></button>
        </form>
      </div>

       
	    <div class="layui-col-md12" style='text-align:right;'>
	    	<a class="layui-btn-small" href='javascript:void(0)' onclick="layer_window_show('关联功能','/sys/adminRoleFunction/choiceFunct')"><i class="layui-icon"></i>添加角色信息</a>
	    </div>
       <div class="layui-col-md12">
  	 			<div class="layui-row grid-demo">
            		<div class="layui-col-md12" style="text-align: center;">
        					<table class="layui-table" id="listTable_details" lay-filter="tablefilter_details"></table>
        			</div>
        		</div>
        </div>
     
     

    </div>
<script type="text/html" id="barDemo">	
    <a class="layui-btn layui-btn-xs  layui-btn-normal" lay-event="del">删除</a>
</script>


 <script type="text/html" id="roleName">
	{{#  if(d.adminRole){}}
		{{ d.adminRole.roleName 

 	}}
	{{# } }}
</script>
<script type="text/html" id="functionName">
	{{#  if(d.adminFunction){}}
		{{ d.adminFunction.functionName 

 	}}
	{{# } }}
</script>
  
<script type="text/javascript">

layui.config({
    base: '/static/plugins/layui/base/',
    v: new Date().getTime()
}).use([ 'form','table','layuiconfig','layuiformajax','layuitable'], function(){
	var form = layui.form, 
	$ = layui.jquery, table = layui.table, 
	layer = layui.layer,  layuitable = layui.layuitable,layuiconfig = layui.layuiconfig;
	
	var url = $(window.parent.document).find("iframe").attr("src");
	var arr = url.split('=');
	var ids = arr[1];
	$("#ids").val(ids);
	var layuiformajax = layui.layuiformajax;
        	var curTable = layuitable.render({
            	elem: '#listTable_details'
            	,id:'listTable_details'
            	,url:'/sys/adminRoleFunction/list/json?roleId='+ids
            	,cols: [[
            	    {field:'id', width:120, title: 'ID',align:'center',fixed:'left'}
               	    ,{field:'roleId',  title: '角色编码',align:'center', minWidth: 120}
               	    ,{field:'roleName',  title: '角色名称',align:'center', minWidth: 500,templet:"#roleName"}
               	    ,{field:'functionId',  title: '功能编码',align:'center', minWidth: 120}
            	    ,{field:'functionName',  title: '功能名称',align:'center', minWidth: 500,templet:"#functionName"}
            	    ,{field:'', width:'20%', title: '操作', align:'center', toolbar: '#barDemo', fixed: 'right'}
            	]]
	        	,done: function () {
	    	        $("[data-field='roleId']").css('display','none');
	    	        $("[data-field='functionId']").css('display','none');
	    	    }
          	});
	form.on('submit(search)', function (data) {
		layuitable.reload(data.field);
        return false;
  	});
	//监听提交
	 form.on('submit(save)', function(data){
	    var url = '/sys/adminRoleFunction/save';
        layuiformajax.postJson(url, data.field, function (result) {
   	    	    layer.alert("保存成功", {icon: 6},function () {
   	                // 获得frame索引
   	                var index = layer.getFrameIndex(window.name);
   				  	location.reload(); 
   	                layer.close(index);
   	            });	
		});
        return false;
	});
    
	table.on('tool(tablefilter_details)', function(obj) {
		var data = obj.data;
		if (obj.event === 'del') {
	          //监听提交
       	   var url = '/sys/adminRoleFunction/del?id='+ data.id;
       	   layuiformajax.postJson(url, '', function (result) {
       		  layer.msg('删除成功!', {icon: 1, time: 1000},function () {
     	                // 获得frame索引
     	                var index = parent.layer.getFrameIndex(window.name);
     				  	location.reload(); 
     	                layer.close(index);
     	            });
     		  });
	
		}
	});
 	

});	
</script>
 
  </body>

</html>