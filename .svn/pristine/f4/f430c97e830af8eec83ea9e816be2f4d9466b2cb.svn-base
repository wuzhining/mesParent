<script type="text/javascript">
layui.config({
    base: '/static/plugins/layui/base/',
    v: new Date().getTime() 
}).use([ 'form','table','laydate','layuiconfig','layuiformajax','layuitable'], function(){
	var form = layui.form, 
	$ = layui.jquery, table = layui.table,  laydate = layui.laydate,
	layer = layui.layer,  layuitable = layui.layuitable,layuiconfig = layui.layuiconfig;
	var layuiformajax = layui.layuiformajax;
	
	var curTable = layuitable.render({
    	elem: '#listTable'
    	,id:'listTable'
    	,url:'/alarm/alarmInforFlow/list/json?statusDictId='+10448
    	,cols: [[
   	    	     {field:'id', width:120, title: 'ID',align:'center', fixed: 'left'}
   	    	     ,{field:'equipWorkId', width:150, title: '设备名称', align:'center',templet: '#equipNameTpl', fixed: 'left'}
   	    	    ,{field:'problemName', width:150, title: '报警问题', align:'center',templet: '#problemName'}
   	    	    ,{field:'alarmLevelId',  title: '报警等级', align:'center'}
   	    	    ,{field:'alarmTypeDictName', width:150, title: '报警类型', align:'center',templet: '#alarmTypeDictName'}
   	    	    ,{field:'statusDictName', width:150, title: '状态', align:'center',templet: '#statusDictName'}
   	    	    ,{field:'alarmUserId',  title: '报警人', align:'center',templet: '#alarmUserIdTpl'}
   	    	    ,{field:'alarmTime',  title: '报警时间', align:'center'}
   	    	    ,{field:'respondUserId',  title: '响应人', align:'center',templet: '#userName'}
   	    	    ,{field:'respondTime',  title: '响应时间', align:'center'}
   	    	    ,{field:'confirmUserId',  title: 'PQE确认人', align:'center',templet: '#pqeName'}
   	    	    ,{field:'confirmTime',  title: 'PQE确认时间', align:'center'}
   	    	    ,{field:'dealUserId',  title: '完成人', align:'center',templet: '#dealName'}
   	    	    ,{field:'dealTime',  title: '完成时间', align:'center'}
   	    	    ,{field:'remark',  title: '备注', align:'center'}
   	    	    ,{field:'createTime',  title: '创建时间', align:'center'}
   	      		,{field:'', width:'10%', title: '操作', align:'center', toolbar: '#barDemo', fixed: 'right'}
   	    	]]
  	});
	
	form.on('submit(search)', function (data) {
		layuitable.reload(data.field);
        return false;
  	});
    $('#alarmProblemSearch').on('click',function(e){
		openWinSelect('/alarm/alarmProblem/alarmProblemOpen',"problemId","problem");
   		e.preventDefault();//默认from表单提交时不刷新
   	})
	$('#equipWorkSearch').on('click',function(e){
    	openWinSelect('/equip/equipWork/equipWorkOpen',"equipWorkId","equipName");
   		e.preventDefault();//默认from表单提交时不刷新
   	}) 	
	table.on('tool(tablefilter)', function(obj) {
		var data = obj.data;
	       	if (obj.event === 'confirm') {
		          //监听提交
	       	   var url = '/alarm/alarmInforFlow/alarmSave?id='+ data.id+'&statusDictId='+data.statusDictId ;
	       	  layuiformajax.postJson(url, '', function (result) {
	       		parent.layer.msg('确认成功!', {icon: 1, time: 1000},function () {
	     				  	location.reload(); 
	     	            });
	       		 
	     		  });
		
			} 	  
	});
	$('#reset').on('click',function(e){
   		$("input").val("");
   		$("select").val("");
   	})
});	
</script>
