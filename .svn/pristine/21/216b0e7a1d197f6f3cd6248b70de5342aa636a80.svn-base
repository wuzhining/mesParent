    </div>
    <div class="x-body">
      <div class="layui-row">
        <form class="layui-form layui-col-md12 x-so layui-form-pane">
          <select name=billTypeFixtureDictId>    
                <option value="">请选择单据类型</option> 
                 <#if billTypeFixtureDict1??>
                     <#list billTypeFixtureDict1 as item>
			            <option value="${item.id?c}" >${item.dictName}</option>
			         </#list>
			         </#if> 
          
          </select>
          <select name="billStatusFixtureDictId">    
                <option value="">请选择校单据状态</option> 
                 <#if billStatusFixtureDict1??>
                     <#list billStatusFixtureDict1 as item>
			            <option value="${item.id?c}" >${item.dictName}</option>
			         </#list>
			         </#if> 
          
          </select>
          <select name="departmentId">    
                <option value="">请选择部门</option> 
                 <#if DepartmentList??>
                     <#list DepartmentList as item>
			            <option value="${item.id?c}" >${item.departmentName}</option>
			         </#list>
			         </#if> 
          
          </select>
          <button class="layui-btn layui-btn-sm"  lay-submit lay-filter="search"><i class="layui-icon">&#xe615;</i></button>
        </form>
      </div>
      <xblock>
        <!-- <button class="layui-btn" onclick="delAll()"><i class="layui-icon"></i>删除</button> -->
        <button class="layui-btn layui-btn-sm" onclick="layer_window_show('添加工具维修','/equip/equipFixtureRepair/edit')"><i class="layui-icon"></i>添加</button>
        <span class="x-right" style="line-height:40px"></span>
      </xblock>
       <div class="layui-col-md12">
  	 			<div class="layui-row grid-demo">
            		<div class="layui-col-md12" style="text-align: center;">
        					<table class="layui-hide" id="listTable" lay-filter="tablefilter"></table>
        			</div>
        		</div>
        </div>
     
     

    </div>
<script type="text/html" id="barDemo">	
	<a class="layui-btn layui-btn-xs  layui-btn-normal" lay-event="edit">编辑</a>
	<a class="layui-btn layui-btn-xs  layui-btn-normal" lay-event="add_detail">维修单据明细维护</a>
</script> 
 <script type="text/html" id="billTypeFixtureDictName">
	{{#  if(d.configDictionaryType){}}
		{{ d.configDictionaryType.dictName 

 	}}
	{{# } }}
</script> 
 <script type="text/html" id="billStatusFixtureDictName">
	{{#  if(d.configDictionaryStatus){}}
		{{ d.configDictionaryStatus.dictName 

 	}}
	{{# } }}
</script> 
 <script type="text/html" id="departmentName">
	{{#  if(d.firmDepartment){}}
		{{ d.firmDepartment.departmentName 

 	}}
	{{# } }}
</script>  
 <script type="text/html" id="workstationName">
	{{#  if(d.structWorkstation){}}
		{{ d.structWorkstation.workstationName 

 	}}
	{{# } }}
</script>

<script type="text/javascript">
layui.config({
    base: '/static/plugins/layui/base/',
    v: new Date().getTime()
}).use([ 'form','table','laydate','layuiconfig','layuiformajax','layuitable'], function(){
	var form = layui.form, 
	$ = layui.jquery, table = layui.table,  laydate = layui.laydate,
	layer = layui.layer,  layuitable = layui.layuitable,layuiconfig = layui.layuiconfig;
	var layuiformajax = layui.layuiformajax;
	
	var curTable = layuitable.render({
    	elem: '#listTable'
    	,id:'listTable'
    	,url:'/equip/equipFixtureRepair/list/json?billTypeFixtureDictId=10424'
    	,cols: [[
    	     {field:'id', width:120, title: 'ID',align:'center'}
    	    ,{field:'billCode',  title: '单据编码',align:'center', minWidth: 120}
    	    ,{field:'billTypeFixtureDictId',title: '单据类型', align:'center',minWidth: 120}
   	    	,{field:'billTypeFixtureDictName',title: '单据类型', align:'center',minWidth: 120,templet: '#billTypeFixtureDictName'}
    	    ,{field:'billStatusFixtureDictId',  title: '单据状态', align:'center',minWidth: 120}
    	    ,{field:'billStatusFixtureDictName',  title: '单据状态', align:'center',minWidth: 120,templet: '#billStatusFixtureDictName'}
    	    ,{field:'departmentId',  title: '部门',align:'center', minWidth: 120}
    	    ,{field:'departmentName',  title: '部门',align:'center', minWidth: 120,templet: '#departmentName'}
    	    ,{field:'workstationId',  title: '工站',align:'center', minWidth: 120}
    	    ,{field:'workstationName',  title: '工站',align:'center', minWidth: 120,templet: '#workstationName'}
    	    ,{field:'remark',  title: '备注',align:'center', minWidth: 120}
    	    ,{field:'createTime',  title: '创建时间', align:'center',minWidth: 160}
      		,{field:'', width:'20%', title: '操作', align:'center', toolbar: '#barDemo', fixed: 'right'}
    	]],done:function(){
    		// 隐藏列
    		$(".layui-table-box").find("[data-field='billTypeFixtureDictId']").css("display","none");   
    		$(".layui-table-box").find("[data-field='billStatusFixtureDictId']").css("display","none");  
    		$(".layui-table-box").find("[data-field='departmentId']").css("display","none");
    		$(".layui-table-box").find("[data-field='workstationId']").css("display","none");
    	}
  	});
	
	form.on('submit(search)', function (data) {
		layuitable.reload(data.field);
        return false;
  	});
	
	table.on('tool(tablefilter)', function(obj) {
		var data = obj.data;
		if (obj.event === 'edit') { 
			layer_window_show('编辑工具维修','/equip/equipFixtureRepair/edit?id=' + data.id); 
		}else{
		//  var url='/product/productBomItem/list/#/id='+data.id;
			var url='/equip/equipFixtureRepairItem/list?productId='+data.productId+'&&id='+data.id;
			layer_window_show('维修单详情信息维护',url);
			//layer_window_show('产品bom详情信息维护','/product/productBomItem/list?productId=' + data.productId);
		}
	});
	
});	
</script>
 
  </body>

</html>