<!DOCTYPE html>
<html>
  
  <head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" /> 
	<#include "../common-header.html"/>
  </head>
  
  <body>
    <div class="x-body">
      <form id="dataForm"  method="post" class="layui-form">
        <input type="hidden"  id="id"  name="id" value="<#if entity??&&entity.id??>${entity.id?c}<#else></#if>" />
        
        <table class="layui-table ">
        
           <tr>
                <td width="15%" class="tableleft">报警组</td>
               <td> 
                 <select name="alarmGroupDictId"> 
                    <#if alarmGroupList??>
                     <#list alarmGroupList as item>
			            <option value="${item.id?c}" <#if (entity.alarmGroupDictId??&&entity.alarmGroupDictId==item.id)>selected="selected"</#if>>${item.dictName}</option>
			         </#list>
			         </#if>
			     </select>
               </td>
               
               <td width="15%" class="tableleft">员工</td>
               <td> 
                 <select name="userId"> 
                    <#if userList??>
                     <#list userList as item>
			            <option value="${item.id?c}" <#if (entity.userId??&&entity.userId==item.id)>selected="selected"</#if>>${item.realName}</option>
			         </#list>
			         </#if>
			     </select>
               </td>
           </tr>
           
           <tr>
               
           <tr>
            <td colspan="4"  style="text-align:center">
               <button class="layui-btn" lay-submit="" lay-filter="save">保存</button>	
            </td>
           </tr>
       </table>  
      </form>
    </div>
    <script>
    layui.config({
        base: '/static/plugins/layui/base/',
        v: new Date().getTime()
    }).use([ 'form','laydate','layuiconfig','layuiformajax'], function(){
          $ = layui.jquery;
          var form = layui.form,layer = layui.layer;
          var layuiformajax = layui.layuiformajax;
        
          //自定义验证规则
        
          
          //监听提交
          form.on('submit(save)', function(data){
        	  console.log(data.field);
        	  var url = '/alarm/alarmGroupUser/save';
        	  layuiformajax.postJson(url, data.field, function (result) {
      	    	   layer.alert("保存成功", {icon: 6},function () {
      	                // 获得frame索引
      	                var index = parent.layer.getFrameIndex(window.name);
      				  	parent.location.reload(); 
      	                parent.layer.close(index);
      	            });
      		  });
      		  
            return false;
          });
          
          
        });
    </script>
    <script>
    </script>
  </body>

</html>