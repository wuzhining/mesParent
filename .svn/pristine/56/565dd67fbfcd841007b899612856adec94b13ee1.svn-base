<script type="text/javascript">
var statusDictId="10313";
layui.config({
    base: '/static/plugins/layui/base/',
    v: new Date().getTime()
}).use([ 'form','table','laydate','layuiconfig','layuiformajax','layuitable'], function(){
	var form = layui.form, 
	$ = layui.jquery, table = layui.table,  laydate = layui.laydate,
	layer = layui.layer,  layuitable = layui.layuitable,layuiconfig = layui.layuiconfig;
	var layuiformajax = layui.layuiformajax;
	
	var curTable = layuitable.render({
    	elem: '#listTable'
    	,id:'listTable'
    	,url:'/equip/equipSpecsFixture/list/json'
    	,cols: [[
    	    {field:'id', width:120, title: 'ID',align:'center'}
    	    ,{field:'fixtureSpecsCode', width:120, title: '治具品种规格编码',align:'center'}
    	    ,{field:'fixtureSpecsName', width:150, title: '治具品种规格名称', align:'center'}
    	    ,{field:'classesId',  title: '治具类型名称',align:'center', minWidth: 120,templet: '#fixtureTypeDictId'}
    	    ,{field:'fixtureStatusDictName',  title: '治具状态',align:'center', minWidth: 120,templet: '#fixtureStatusDictName'}
    	    /* ,{field:'fixtureStatusDictId',  title: '治具状态编码',align:'center', minWidth: 120}
    	    ,{field:'supplierId',  title: '供应商编码', align:'center',minWidth: 120} */
    	    ,{field:'companyName',  title: '供应商名称', align:'center',minWidth: 120,templet: '#firmPartner'}
    	    ,{field:'standarlive', width:150, title: '标准寿命', align:'center'}
    	    ,{field:'quantity',  title: '数量',align:'center', minWidth: 120}
    	    ,{field:'remark',  title: '描述',align:'center', minWidth: 120}
      		,{field:'', width:'20%', title: '操作', align:'center', toolbar: '#barDemo', fixed: 'right'}
    	]]
  	});
	
	form.on('submit(search)', function (data) {
		layuitable.reload(data.field);
        return false;
  	});
 
	$('#reset').on('click',function(e){
   		$("input").val("");
   		$("select").val("");
   	})
   	
	table.on('tool(tablefilter)', function(obj) {
		var instructId = parent.$("#ids").val();
		var processNodeId = parent.$("#idss").val();
		var number = "0";
		console.log(processNodeId);
		var data = obj.data;
		if (obj.event === 'choice') {
			console.log(data);
	        //监听提交
       	   var url = '/struct/structProcedureEquipFixture/save';
       	    layuiformajax.postJson(url, {"processNodeId":processNodeId,"instructId":instructId,"equipSpecsFixtureId":data.id,"quantity":number,"quantityBase":number,"wastageRatio":number}, function (result) {
       		    layer.msg('添加成功!', {icon: 1, time: 1000},function () {
     	            // 获得frame索引
     	            var index = parent.layer.getFrameIndex(window.name);
     	            parent.location.reload(); 
     	            parent.layer.close(index);
    	        });
       		  
   		    });  
		}
	});
});	
</script>
 
  </body>

</html>