	    ,data = obj.data //得到所在行所有键值
	    ,field = obj.field; //得到字段

 	     var url = '/config/configLabelItem/saveDetail';
        layuiformajax.postJson(url, {"id":data.id,"labelId":ids,"sortNo":value}, function (result) {
