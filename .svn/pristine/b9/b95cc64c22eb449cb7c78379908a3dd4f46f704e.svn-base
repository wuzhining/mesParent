	{{#  }else { }}
		否
	{{#  } }}
</script>      
 <script type="text/html" id="parentDictNameTpl">
  	{{#  if(d.parentConfigDictionary){ }}
		{{ d.parentConfigDictionary.dictName  
     }}
  {{#  } }}
</script>    
 <script type="text/html" id="parentDictCodeTpl">
  	{{#  if(d.parentConfigDictionary){ }}
		{{ d.parentConfigDictionary.dictCode  
     }}
  {{#  } }}
</script>  

<script type="text/javascript">
layui.config({
    base: '/static/plugins/layui/base/',
    v: new Date().getTime()
}).use([ 'form','table','laydate','layuiconfig','layuiformajax','layuitable'], function(){
	var form = layui.form, 
	$ = layui.jquery, table = layui.table,  laydate = layui.laydate,
	layer = layui.layer,  layuitable = layui.layuitable,layuiconfig = layui.layuiconfig;
	var layuiformajax = layui.layuiformajax;
	
	var curTable = layuitable.render({
    	elem: '#listTable'
    	,id:'listTable'
    	,url:'/config/configDictionary/list/json'
    	,cols: [[
    	    {field:'id', width:120, title: 'ID',align:'center',fixed:'left'}
    	    ,{field:'parentDictName',  title: '字典组合名称',align:'center',templet:'#parentDictNameTpl'} 
    	    ,{field:'parentDictCode',  title: '字典组合编码',align:'left',templet:'#parentDictCodeTpl'} 
    	    ,{field:'dictName',  title: '数据字典名称',align:'center', minWidth: 120}
    	    ,{field:'dictValue',  title: '数据字典值', align:'center',minWidth: 120}
    	    ,{field:'dictCode',  title: '数据字典编码',align:'left', minWidth: 120}
    	    ,{field:'isValid',  title: '是否有效', align:'center',minWidth: 120,templet:'#isValidTpl'} 
      		,{field:'', width:'20%', title: '操作', align:'center', toolbar: '#barDemo', fixed: 'right'}
    	]]
  	});
	
	form.on('submit(search)', function (data) {
		layuitable.reload(data.field);
        return false;
  	});
 
	
	table.on('tool(tablefilter)', function(obj) {
		var data = obj.data;
		if (obj.event === 'edit') { 
			layer_window_show('编辑数据字典','/config/configDictionary/edit?id=' + data.id); 
		}
	});
	
	
	laydate.render({
		elem: '#startTime' //指定元素
		,type: 'date'
		,format: 'yyyy-MM-dd' //可任意组合
	});
	
	laydate.render({
		elem: '#endTime' //指定元素
		,type: 'date'
		,format: 'yyyy-MM-dd' //可任意组合
	});
});	
</script>
 
  </body>

</html>